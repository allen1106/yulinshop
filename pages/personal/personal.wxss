/* pages/personal/personal.wxss */
.header {
  display: flex;
  flex-direction: column;
  height: 300rpx;
  background-color: #00A4FF;
}

.info-wrapper {
  flex: 3;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.info-wrapper image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  background-color: #bfbfbf;
}

.info-wrapper text {
  color: #fff;
  font-size: 28rpx;
}

.balance-wrapper {
  flex: 2;
  display: flex;
  flex-direction: row;
  background-color: rgba(0, 0, 0, 0.2);
}

.balance-wrapper view {
  display: flex;
  flex-direction: column;
  margin: 20rpx auto;
  height: calc(100% - 40rpx);
  width: 100%;
  justify-content: space-between;
}

.balance-wrapper view:nth-child(1) {
  border-right: 3rpx solid #fff;
  padding-right: 10%;
  text-align: right;
}
.balance-wrapper view:nth-child(2) {
  padding-left: 10%;
  text-align: left;
}

.cor-white {
  color: #fff;
  font-size: 30rpx;
}

.cor-gray {
  color: #CECECE;
  font-size: 26rpx;
}

.main {
  width: 90%;
  margin: 0 auto;
}

.menu-wrapper {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  padding: 50rpx 60rpx;
  width: calc(100% - 120rpx);
  border-radius: 20rpx;
  background-color: #fff;
}

.menu-wrapper .row-item {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.menu-wrapper .row-item:nth-child(1) {
  border-bottom: 2rpx solid #BBBBBB;
}

.menu-wrapper .row-item view {
  flex: 1;
  margin: 20rpx auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}

.row-item view:nth-child(1) {
  border-right: 2rpx solid #BBBBBB;
}

.btn-item:not([size='mini']) {
  display: inline-block;
  margin: 0;
  margin-top: 20rpx;
  width: 100%;
  height: 80rpx;
  border-radius: 20rpx;
  color: #fff;
  font-size: 28rpx;
}

.blue-bg {
  background-color: #00C0FF;
}
.orange-bg {
  background-color: #FFB100;
}
.gray-bg {
  background-color: #D5D5D5;
}