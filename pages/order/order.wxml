<!--pages/order/order.wxml-->
<view class="header">
  <search-input searchHandler="{{searchHandler}}" my-class="page-item" searchWords="{{key}}"></search-input>
  <view class='switch-tab'>
    <view wx:for='{{arr}}' class='{{currentTab == index ? "active" : ""}}' data-current='{{index}}' bindtap='swichNav'>{{item}}</view>
  </view>
</view>
<view class="main">
  <swiper style="height: {{swiperHeight}};" current="{{currentTab}}"  bindchange="changeSwiperTab">
    <swiper-item>
      <view class="item-list">
        <flat-item wx:for="{{sellItemList}}" wx:key="item" my-class="item-wrapper" itemInfo="{{item}}" bindTap="1"></flat-item>
      </view>
    </swiper-item>
    <swiper-item>
      <view class="item-list">
        <flat-item wx:for="{{buyItemList}}" wx:key="item" my-class="item-wrapper" itemInfo="{{item}}" bindTap="1"></flat-item>
      </view>
    </swiper-item>
    <swiper-item>
      <view class="item-list">
        <flat-item wx:for="{{pendingItemList}}" wx:key="item" my-class="item-wrapper" itemInfo="{{item}}" bindTap="1"></flat-item>
      </view>
    </swiper-item>
  </swiper>
</view>
