/* pages/login/login.wxss */
page {
  background-color: #00A4FF;
}

.login-container {
  width: 90%;
  margin: 0 auto;
  color: #fff;
  font-size: 32rpx;
}

.login-container .logo,
.login-container .btn-login,
.login-container .tip-msg {
  width: 100%;
  align-items: center;
  text-align: center;
  margin: 20rpx auto;
}

.login-container .logo image {
  width: 300rpx;
}

.login-container .btn-login {
  width: 70%;
}

.login-container .btn-login button:not([size='mini']) {
  padding: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #4876FF;
  color: #fff;
  border-radius: 45rpx;
  font-size: 28rpx;
}