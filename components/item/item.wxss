/* components/searchInput/search.wxss */
.left {
  float: left;
}
.right {
  float: right;
}
.header {
  height: 50rpx;
  margin: 0 auto;
  width: 100%;
  font-size: 32rpx;
}

.content-panel {
  width: 100%;
  margin: 0 auto;
}

.type {
  font-size: 28rpx;
}

.type label {
  color: #00c0ff;
}

.title {
  font-size: 32rpx;
}

.detail {
  font-size: 32rpx;
  color: rgba(16, 16, 16, 1);
}

.price {
  margin: 10rpx 0;
  color: #FF0000;
  font-size: 26rpx;
  font-weight: bold;
}

.img-wrapper {
  width: 100%;
  margin: 0 auto;
}

.img-wrapper .image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 0rpx;
}

.btn-wrapper {
  width: 100%;
  overflow: hidden;
}

.btn-wrapper .button {
  float: right;
  padding: 0;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  color: #fff;
  margin-left: 10rpx;
}

.btn-wrapper .msg {
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  font-size: 22rpx;
  color: #949494;
}

.orange-btn {
  background-color: #FF7100;
}

.green-btn {
  background-color: #32B317;
}

.tag-wrapper .tag-item {
  display: inline-block;
  margin: 5rpx;
  padding: 5rpx 20rpx;
  font-size: 24rpx;
}

.preview-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(87, 87, 87, 0.8);
  z-index: 999;
}

.preview-container .img-wrapper {
  width: 80%;
  height: 60%;
  margin: 50rpx auto;
}

.preview-container .img-wrapper .image {
  width: 100%;
  height: 100%;
}

.preview-container .text-wrapper {
  width: 80%;
  margin: 20rpx auto;
}

.preview-container .text-wrapper .text {
  font-size: 28rpx;
  color: #fff;
}

.img-left,
.img-right {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: 50%;
}

.img-left {
  left: 0;
}

.img-right {
  right: 0;
}